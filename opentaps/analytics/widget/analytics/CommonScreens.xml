<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-screen.xsd">

    <screen name="main-application-decorator">
        <section>
            <actions>
                <property-map global="true" resource="analytics" map-name="configProperties"/>
                <set field="opentapsApplicationName" value="analytics" global="true"/>
                <script location="component://analytics/webapp/analytics/WEB-INF/actions/includes/main-decorator.bsh"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="component://opentaps-common/widget/screens/common/CommonScreens.xml">
                    <decorator-section name="application-layout">
                        <decorator-section-include name="section-layout"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="main-section-decorator">
        <section>
            <actions>
                <set field="sectionName" value="Reports" global="true"/>
                <set field="sectionStyle" value="singleColumn"/>
            </actions>
            <widgets>
                <include-screen name="main-section-template" location="component://opentaps-common/widget/screens/common/CommonScreens.xml"/>
            </widgets>
        </section>
    </screen>

</screens>
