<service-eca xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/service-eca.xsd">

    <!-- Checks each QuoteItem when finalizing a Quote -->
    <eca service="setQuoteStatus" event="commit">
        <condition field-name="statusId" operator="equals" value="QUO_FINALIZED"/>
        <action service="finalizeQuote" mode="sync"/>
    </eca>

</service-eca>
